{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "typeRoots": [
      "./src/Types",
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
